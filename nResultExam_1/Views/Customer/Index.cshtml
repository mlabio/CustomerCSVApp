    @*Js for our angular js module, controller*@
    <script src="~/Scripts/customer.js"></script>
    @*other unused links*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
